{
  "safeBump": false,
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "git": {
    "requireBranch": "master",
    "commitMessage": "[ci skip] Release ${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
